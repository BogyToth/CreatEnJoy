@model IEnumerable<CreatEnJoy.Models.PostModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IDPost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDPost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @{ 
                if ((User.IsInRole("Admin") || User.IsInRole("User")) && item.Description.Contains(User.Identity.Name))
                { Html.ActionLink("Edit", "Edit", new { id = item.IDPost }); }
            }
                         @Html.ActionLink("Details", "Details", new {id=item.IDPost}) 
            @{ 
                if (User.IsInRole("Admin") && item.Description.Contains(User.Identity.Name) && item.Subject.Contains(User.Identity.Name))
                {
                    Html.ActionLink("Delete", "Delete", new { id = item.IDPost });
                }
            }
        </td>
    </tr>
}

</table>
